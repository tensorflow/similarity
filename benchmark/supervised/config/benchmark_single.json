{
    "version": "1.0.0.1",
    "random_seed": 303,
    "tfds_data_dir": "/workspace/tensorflow_datasets",

    "datasets": {
        "cars196": {
            "x_key": "image",
            "y_key": "label",
            "train_classes": [0, 98],
            "test_classes": [98, 196],
            "train_val_splits": {
                "n_splits": 4,
                "val_class_pctg": 0.125
            },
            "eval_callback": {
                "max_num_queries": 300,
                "max_num_targets": 1000
            }
        }
    },
    "preprocess": [
            {
                "name": "center_crop",
                "height": 256,
                "width": 256
            }
    ],
    "augmentations": {
        "train":[
            { 
                "name": "random_resized_crop",
                "target_size": [227, 227],
                "crop_area_factor": [0.15625, 1.0],
                "aspect_ratio_factor": [0.75, 1.3333]
            },
            { 
                "name": "random_flip",
                "mode": "horizontal"
            }
        ],
        "test": [
            {
                "name": "center_crop",
                "height": 227,
                "width": 227
            }
        ]
    },
    "architectures": {
        "effnet_b0": {
            "architecture": "effnet",
            "input_shape": [227, 227, 3],
            "embedding_sizes": [128, 512],
            "variant": "B0",
            "trainable": "frozen"
        }
    },
    "losses": {
        "multisim_loss": {
            "loss": "multisim_loss",
            "distance": "cosine",
            "alpha": 2.0,
            "beta": 40.0,
            "epsilon": 0.1,
            "lmda": 0.5
        }
    },
    "optimizer": {
        "adam_lr3e-3":{
            "optimizer": "adam",
            "lr": 0.003
        }
    },
    "training": {
        "basic": {
            "classes_per_batch": 8,
            "examples_per_class_per_batch": 4,
            "epochs": 200
        }
    },
    "evaluation": {
        "recall_at_k": {
            "k": [1,2,4,8,16,32],
            "average": "micro"
        },
        "precision_at_k": {
            "k": [1,2,4,8,16,32],
            "average": "micro"
        },
        "map_at_r": { }
    }
}

